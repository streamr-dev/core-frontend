{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "types": ["jest", "node"],
    "module": "esnext",
    "strict": false,
    "isolatedModules": false,
    "noImplicitAny": false,
    "paths": {
      "$app/*": ["app/*"],
      "$mp/*": ["app/src/marketplace/*"],
      "$userpages/*": ["app/src/userpages/*"],
      "$routes/*": ["app/src/routes/*"],
      "$routes": ["app/src/routes/index.ts"],
      "$shared/*": ["app/src/shared/*"],
      "$testUtils/*": ["app/src/test/test-utils/*"],
      "$ui/*": ["app/src/shared/components/Ui/*"],
      "$utils/*": ["app/src/utils/*"],
      "$config": ["app/test/test-utils/testConfig.ts"],
      "~/*": ["src/*"]
    }
  },
  "files": ["./app/test/test-utils/setupTests.ts"],
  "include": ["**/*.test.ts", "**/*.test.tsx", "**/*.d.ts"]
}
