{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "module": "esnext",
        "strict": false,
        "isolatedModules": false,
        "noImplicitAny": false,
        "paths": {
            "$testUtils/*": ["test/test-utils/*"],
            "$config": ["test/test-utils/testConfig.ts"],
            "~/*": ["src/*"]
        }
    },
    "files": ["./test/test-utils/setupTests.ts"],
    "include": ["**/*.test.ts", "**/*.test.tsx", "**/*.d.ts"]
}
