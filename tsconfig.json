{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "typeRoots": ["node_modules/@types", "./typings"],
        "paths": {
            "$testUtils/*": ["test/test-utils/*"],
            "$config": ["src/config/*.toml"],
            "~/*": ["src/*"],
        }
    },
    "exclude": ["**/*.test.ts", "**/*.test.tsx",
        "./test/test-utils/setupTests.ts"
    ]
}
