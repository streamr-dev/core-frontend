{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "paths": {
            "$testUtils/*": ["test/test-utils/*"],
            "~/*": ["src/*"]
        }
    },
    "exclude": [
        "**/*.test.ts",
        "**/*.test.tsx",
        "test/test-utils/setupTests.ts",
        "dist/**/*.*",
        "storybook-static/**/*.*",
        "src/generated/**/*.ts",
        "coverage/**/*"
    ]
}
