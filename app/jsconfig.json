    "allowSyntheticDefaultImports": false,
    "baseUrl": ".",
    "paths": {
      "$app/**/*": ["./**/*"],
      "$auth/**/*": ["src/auth/**/*"],
      "$docs/**/*": ["src/docs/**/*"],
      "$mp/**/*": ["src/marketplace/**/*"],
      "$userpages/**/*": ["src/userpages/**/*"],
      "$routes**/*": ["src/routes/**/*"],
      "$shared/**/*": ["src/shared/**/*"],
      "$editor/**/*": ["src/editor/**/*"],
