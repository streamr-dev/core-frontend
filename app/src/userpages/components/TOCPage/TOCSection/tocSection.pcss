@import 'variables.pcss';

.section {
  /* Use padding instead of margin so that scrolling
     to sections with anchor links looks nicer */
  padding-top: 1rem;
  padding-bottom: 5.5rem;
}

.title {
  color: var(--greyDark);
  font-size: 1.5rem;
  font-weight: var(--medium);
  text-align: left;
  letter-spacing: 0;
  line-height: 1.5rem;
  margin-bottom: 0.5rem;
  padding-bottom: 1.2rem;
  border-bottom: 2px solid #D8D8D8;
}

@media (--sm-down) {
  .title {
    border-bottom: none;
  }
}

@media (--md-up) {
  .title {
    margin-bottom: 2.6rem;
  }
}

@media (--md-down) {
  .hideTablet {
    display: none;
  }
}
