.longText {
  max-width: 536px;
}

.statusTitle {
  display: inline-flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.showOnDesktop {
  display: none;
}

.showOnTablet {
  display: block;
}

@media (--md-up) {
  .showOnDesktop {
    display: block;
  }

  .showOnTablet {
    display: none;
  }
}
