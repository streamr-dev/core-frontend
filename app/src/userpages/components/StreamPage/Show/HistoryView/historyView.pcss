.row {
  margin-bottom: 3rem;
}

.deleteButton {
  position: absolute;
  bottom: 26px;
}

.dropTarget {
  width: 100%;
  color: #323232;
  background: #FFFFFF;
  box-shadow: 0 0 6px 0 rgba(0, 0, 0, 0);
  border-radius: 4px 4px 4px 4px;

  .dropTargetContent {
    padding: 2rem 0;
  }

  .icon {
    width: 52px;
    height: 52px;
    margin: 0 1rem 0 1rem;
  }

  .icon g g {
    stroke: #A3A3A3;
  }

  .icon.hover g g {
    stroke: #323232;
  }
}
