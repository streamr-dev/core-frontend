.historyView {
  max-width: 682px;
}

.fileUpload {
  margin-bottom: 3rem;

  &:--enter {
    cursor: pointer !important;

    input {
      cursor: pointer !important;
    }
  }
}

.longText {
  line-height: 20px;
  max-width: 488px;
  padding-bottom: 2em;
}

.deleteButton,
.browseFiles {
  margin-left: -86px;
  margin-top: 22px;
}

@media (max-width: 1199px) {
  .deleteButton,
  .browseFiles {
    margin-left: 0;
    margin-top: 18px;
  }
}

.storedEventsContainer {
  &:--enter {
    cursor: pointer !important;

    input {
      cursor: pointer !important;
    }

    svg {
      stroke: var(--streamrBlue);
    }

    path {
      stroke: var(--streamrBlue);
    }
  }
}

@media (--sm-down) {
  .storedEvents {
    margin-bottom: 3.5em;
  }
}

.dropTarget {
  width: 100%;
  color: #323232;
  background: #FFFFFF;
  box-shadow: 0 0 6px 0 rgba(0, 0, 0, 0);
  border-radius: 4px;

  .dropTargetContent {
    padding: 2rem 0;
  }

  .icon {
    width: 52px;
    height: 52px;
    margin: 0 1rem 0 1rem;
  }

  .icon g g {
    stroke: #A3A3A3;
  }

  .icon.hover g g {
    stroke: #323232;
  }
}

.historicalStoragePeriod {
  margin: 2em 0 1em;
  display: block;
}
