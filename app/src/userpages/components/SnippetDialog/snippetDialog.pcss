.content {
  position: relative;
  padding: 24px 37px;
  text-align: left;
  border-bottom: none;
}

.footer {
  display: flex;
  width: 100%;
}

.language {
  span {
    font-size: 14px;
    color: #0324FF;
  }
}

.library {
  font-size: 14px;
  margin-left: 1.5rem;

  a,
  a:active,
  a:hover,
  a:visited {
    color: #0324FF;
    text-decoration: none;
  }
}

.languageTitle {
  margin-right: 0.5rem;
}

.buttons {
  flex: 1;
}

.noPadding {
  padding: 0;
}

.codeSnippet {
  margin-top: 1rem;
  margin-bottom: 3rem;
  background: none !important;
  font-size: 12px;
}

.footerDivider {
  border-top: 1px solid #F2F1F1;
  width: 100%;
  max-width: 100%;
  height: 1px;
  position: absolute;
  bottom: 75px;
  left: 0;
}
