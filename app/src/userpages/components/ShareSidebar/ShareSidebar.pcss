.anonSelectControl.anonSelectControl {
  font-size: 14px;
}

.userList {
  overflow: auto;
  flex-grow: 1;
  border-top: 1px solid #EFEFEF;
}

.saveCancelButtons {
  display: grid;
  grid-column-gap: 1um;
  grid-template-columns: auto auto;
}

.InputNewShare {
  display: grid;
  grid-template-columns: 1fr auto;
  grid-column-gap: 1um;

  .input {
    font-size: 14px;
    line-height: normal;
    background-color: #FDFDFD;
  }

  .button {
    height: 2.5um;
    width: 2.5um;
    padding: 0;
  }

  .plusIcon {
    height: 1um;
    width: 1um;
  }
}

.errorMessageWrapper {
  overflow: hidden;
}

.errorMessage {
  color: #FF0F2D;
  background-color: #FFF4F5;
  font-size: 14px;
  padding: 1.5um 2um;
  line-height: 20px;
  position: relative;
  z-index: 1;
}

.errorOverlay {
  pointer-events: none;
  transition: opacity 400ms ease;
  position: absolute;
  content: ' ';
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: white;
  z-index: 0;
  opacity: 0;
}

.errorOverlay.errorOverlayVisible {
  pointer-events: auto;
  opacity: 0.5;
}

.userPermissions {
  padding: 0;
  transition: all 400ms ease;

  &:not(:last-child) {
    border-bottom: 1px solid #EFEFEF;
  }

  &:only-child {
    /* override not last child border if only child */
    border-bottom: 1px solid #EFEFEF;
  }

  .permissionsHeader {
    display: grid;
    grid-template-columns: 1fr auto;
    padding: 0 2um;

    .permissionsHeaderTitle {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      padding-bottom: 1.5um;
      transition: all 400ms ease;
    }

    h4 {
      font-size: inherit;
      margin: 0;
      padding: 0;
      line-height: normal;
      text-overflow: ellipsis;
      max-width: 260px;
      overflow: hidden;
      user-select: none;
      padding-top: 1.5um;
      padding-bottom: 4px;
      transition: all 400ms ease;
    }

    .button {
      transition: all 0.1s ease-in;
      background: transparent;
      height: 1.5um;
      width: 1.5um;
      opacity: 0;
      padding: 0;
      border: none;
    }

    &:hover .button {
      background: #F8F8F8;
      opacity: 1;
      border: none;
    }

    .trashIcon {
      height: 1um;
      width: 1um;
    }
  }

  .permissionControls {
    opacity: 0;
    transition: opacity 150ms ease, transform 400ms ease;
    transform: translateY(-5px);
    overflow: hidden;
    will-change: height, opacity;
    padding: 0 2um;
  }

  .selectedGroup {
    padding: 1.5px 4px;
    font-size: 10px;
    font-weight: 500;
    color: #525252;
    background: #EFEFEF;
    transition: all 300ms ease;
    display: inline-block;
    line-height: normal;
    opacity: 1;
    will-change: opacity, padding, max-height, transform;
    max-height: 100vh;
    height: auto;
    position: relative;
    overflow: hidden;
  }

  &.isSelected {
    background: #FDFDFD;
    padding-bottom: 1.5um;

    .selectedGroup {
      transform: translateY(50%);
      opacity: 0;
      height: 0;
      padding: 0 4px;
    }

    .permissionControls {
      opacity: 1;
      transform: translateY(0);
      transition: opacity 400ms 150ms ease, transform 400ms 150ms ease;
    }

    .permissionsHeaderTitle {
      padding-bottom: 0;
    }

    .permissionsHeader h4 {
      padding-bottom: calc(1.5um - 4px);
    }
  }

  .permissionsCheckboxes {
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    grid-row-gap: 1um;

    > * {
      display: flex;
      align-items: center;
    }

    .checkboxContainer {
      display: flex;
      align-items: center;
    }

    .checkbox {
      margin-right: 0;
    }

    label {
      padding-left: 1um;
      margin-bottom: 0;
      line-height: normal;
      width: 100%;
    }
  }

  .errorMessage {
    margin: -1.4um 0um;
    margin-top: 1.4um;
  }
}

.footer {
  border-top: 1px solid #EFEFEF;
  display: flex;

  .saveCancelButtons {
    button {
      min-width: 96px;
    }
  }

  :first-child {
    margin-right: auto;
  }

  .cancelButton {
    background: transparent;
    border: transparent;
    outline: transparent;
    color: #525252 !important;
  }
}
