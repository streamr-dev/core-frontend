.container {
  display: flex;
}

.avatarLink {
  text-decoration: none;

  &:hover,
  &:focus,
  &:active {
    text-decoration: none;
  }
}

.avatarCircle {
  margin-right: 1.5rem;
  width: 72px;
  height: 72px;
  line-height: 5rem;
  font-size: 2em;
  overflow: hidden;
}

@media (--md-up) {
  .avatarCircle {
    margin-right: 2.5rem;
    width: 80px;
    height: 80px;
  }
}
