@import '../../variables.pcss';

.badges {
  padding: 2.5em 0;
}

.break {
  width: 100%;
}

.placeholder {
  width: 1.5em;
}

.inner {
  display: flex;
  flex-flow: row wrap;
  justify-content: space-around;
  margin-top: -2.5em;
}

@media (--sm-up) {
  .badges {
    border-top: 1px solid #525252;
  }

  .break,
  .placeholder {
    display: none;
  }

  .inner {
    justify-content: space-between;
  }
}

@media (--lg-up) {
  .inner {
    justify-content: normal;
  }
}
