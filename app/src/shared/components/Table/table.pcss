.table {
  margin-top: 1em;
  width: 100%;
  border-collapse: collapse;
  color: var(--greyDark2);
  font-size: 14px;

  tr {
    th,
    td {
      border: none;
      height: auto;
      min-width: 120px;
      max-width: 250px;
      vertical-align: middle;

      @media (--lg-down) {
        min-width: 100px;
        max-width: 200px;
      }
    }

    padding: 0.5em 0;
    border-bottom: 1px solid #CDCDCD;
  }

  tbody tr:--enter {
    background-color: #E7E7E7 !important;
  }

  thead {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 12px;
    font-weight: normal;
    letter-spacing: 0;
    color: #A3A3A3;
  }

  tbody tr th {
    font-weight: var(--medium) !important;
  }
}

.noWrap {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
