.modalContentArea {
  padding: 24px 37px;
  border-top: 1px solid #F2F1F1;
  border-bottom: 1px solid #F2F1F1;
  font-size: 16px;
  border-radius: inherit;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  word-break: break-word;
}

@media (--xs) {
  .modalContentArea {
    padding: 24px 24px;
    font-size: 14px;
    line-height: 24px;
  }
}
