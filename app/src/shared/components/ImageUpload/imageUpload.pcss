.dropzoneAdviceImageLoading {
  img {
    opacity: 0.3;
  }

  svg,
  p {
    display: none;
  }
}

.container {
  width: 100%;
}

.dropzone {
  background-color: #EDEDED;
  width: 100%;
  height: 400px;
  overflow: hidden;
  position: relative;
  text-align: center;
  color: #323232;
  font-weight: 500;

  &.dragEntered {
    border-radius: 4px;
    border: 2px solid #0324FF;
  }

  &:hover {
    cursor: pointer;
  }

  img {
    opacity: 0.5;
  }
}

@media (--md-down) {
  .dropzone {
    height: auto;
    min-height: 180px;
    font-size: 14px;
  }
}

.previewImage {
  width: 100%;
  height: 100%;
  max-height: 410px;
  background-position: 50% 50%;
  background-repeat: no-repeat;
  object-fit: cover;
}

@media (--md-down) {
  .previewImage {
    height: auto;
  }
}

@media (--sm-down) {
  .previewImage {
    height: 100%;
  }
}

.dropzoneAdvice {
  position: absolute;
  top: 55%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100%;

  img {
    display: none;
  }
}

.dropzoneAdviceNoImage {
  position: absolute;
  top: 55%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100%;

  img {
    display: inline-block;
    opacity: 1;
  }
}

.hide {
  display: none;
}

.icon {
  margin-bottom: 2em;
}

.uploadAdvice {
  font-weight: 500;
  font-size: 16px;
  letter-spacing: 0;
  line-height: 24px;
}
