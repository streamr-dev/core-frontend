@import 'variables.pcss';

.tile {
  display: block;
  margin: 1em auto 0;
  border-radius: 2px;
  font-family: 'IBM Plex Sans', sans-serif;
  font-size: 16px;
  text-align: left;

  &,
  &:--idle,
  &:--enter {
    color: black;
    text-decoration: none;
  }

  .image {
    object-fit: cover;
    width: 100%;

    &:--enter {
      filter: brightness(70%);
    }
  }

  .menu {
    position: absolute;
    top: 0;
    right: 0;
    margin-right: 1.5em;
    margin-top: 1.5em;
  }
}
