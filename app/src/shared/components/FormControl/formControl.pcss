@import 'variables.pcss';

.root {
  display: block;
  margin: 0.5em 0 0;
  position: relative;

  label {
    font-size: 0.75em;
    left: 0;
    line-height: 1em;
    margin: 0;
    pointer-events: none;
    position: absolute;
    top: -1em;
    transform: translate(0, 1.75em) scale(1);
    transform-origin: top left;
    transition: 200ms cubic-bezier(0, 0, 0.2, 1) 0ms;
    transition-property: color, transform;
    width: 100%;
    z-index: 1;
  }
}

.filled label {
  transition: none;
}

.focused {
}

.filled,
.focused {
  label {
    transform: translate(0, 0) scale(0.75);
  }
}

.withError.filled label,
.withError.focused label {
  color: #FF0F2D;
}

.weak {
  color: #FF0F2D;
}

.moderate {
  color: #F9CF0D;
}

.strong {
  color: #2AC437;
}

@media (--md-up) {
  .root label {
    font-size: 1em;
  }
}
