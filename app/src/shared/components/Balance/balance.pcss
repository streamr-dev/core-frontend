.balances {
  line-height: 1um;
  font-family: var(--sans);
  font-size: 0.75um;
  font-weight: var(--medium);
  letter-spacing: 0;
  text-transform: uppercase;
}

.balanceLabel {
  color: #525252;
}

.balanceValue {
  color: #A3A3A3;
}

.spinner {
  width: 12px;
  height: 12px;
  margin-top: 2px;
}

.balanceLabel + .balanceValue {
  margin-left: 0.2rem;
}

.balanceValue + .balanceLabel {
  margin-left: 0.5rem;
}
