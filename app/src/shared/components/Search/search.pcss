.search {
  display: flex;
  align-items: center;
  border-bottom: 2px solid transparent;
}

.search.open {
  border-bottom: 2px solid #FF5C00;
}

.searchInput {
  display: flex;
  width: 0;
  font-family: 'IBM Plex Sans', sans-serif;
  font-size: 16px;
  letter-spacing: 0;
  transition: all 0.3s ease;
  border: none;
  outline: none;
}

.searchInput::placeholder {
  color: transparent;
}

.searchInput.open {
  cursor: initial;
  width: 100%;
}

.searchInput.open::placeholder {
  color: #A3A3A3;
}

.searchIcon {
  display: flex;
  align-items: center;
  stroke: #A3A3A3;
  cursor: pointer;
  transition: all 0.1s ease;
}

.searchIcon.open {
  stroke: #FF5C00;
  margin-right: 8px;
}

.clearIcon {
  display: none;
  transition: all 0.1s ease;
}

.clearIcon.open {
  display: flex;
  cursor: pointer;
}
