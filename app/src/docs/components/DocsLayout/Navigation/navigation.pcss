@import 'variables.pcss';

.navigationContainer {
  padding-top: 0;
  top: 0;
  position: sticky;
}

.navList,
.subNavList {
  list-style-type: none;
  margin: 1.2em 0 0 0;
  padding: 0;
  text-align: left;
  position: sticky;
}

.subNavList {
  margin-left: 0;
  padding-left: 1.2em;
  border-left: 2px solid #D8D8D8;
}

.navListItem {
  color: var(--greyDark);
  font-size: 1em;
  letter-spacing: 0;
  margin-bottom: 1em;
  line-height: 1.5em;

  a {
    display: block;
    width: 100%;
    color: var(--greyDark);
    text-decoration: none;

    &:hover,
    &:active {
      color: var(--blue);
    }

    &.active {
      color: var(--blue);
      font-weight: var(--medium);
    }
  }

  .subNavList li a {
    color: #A3A3A3;

    &:hover,
    &:active {
      color: var(--blue);
    }

    &.active {
      color: var(--blue);
      font-weight: var(--medium);
    }
  }
}

@media (--md-down) {
  .navList,
  .subNavList {
    position: relative;
    background-color: #F8F8F8;
    margin-top: 0;
  }
}

.arrowExtender {
  display: none;
}

@media (--md-down) {
  .navListItem a {
    padding: 0.5em;
    font-size: 16px;
    letter-spacing: 0;
    line-height: 24px;
  }

  .navListItem {
    a:nth-of-type(1) {
      padding-top: 1.5em;
    }
  }

  .arrowExtender {
    display: block;
    width: 16px;
    height: 16px;
    position: absolute;
    transform: rotate(90deg);
    top: 28px;
    right: 34px;
    transition: transform 300ms ease-in-out;
  }

  .navigationContainer {
    position: relative;
    height: auto;
    margin-bottom: 2em;
    border-bottom: 1px solid #D8D8D8;

    &.collapsed {
      height: 72px;
      position: sticky;
      top: 0;
      z-index: 5;
      overflow: hidden;
      border-bottom: none;

      .arrowExtender {
        transform: rotate(270deg);
      }
    }
  }
}
