@import 'variables.pcss';

.mdH1,
.mdH2,
.mdH3,
.mdH4,
.mdH5,
.mdP {
  color: var(--greyDark);
  font-family: IBMPlexSans, sans-serif;
  letter-spacing: 0;
}

.mdH1,
.mdH2,
.mdH3,
.mdH4,
.mdH5 {
  font-weight: 500;
}

.mdH1 {
  font-size: 44px;
  line-height: 88px;
}

.mdH2 {
  font-size: 32px;
  line-height: 64px;
}

.mdH3 {
  font-size: 26px;
  line-height: 52px;
}

.mdH4 {
  font-size: 20px;
  line-height: 40px;
}

.mdP {
  font-size: 20px;
  line-height: 40px;
}
