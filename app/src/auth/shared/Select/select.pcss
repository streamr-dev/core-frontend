@import "@streamr/streamr-layout/pcss/variables.pcss";

.root {
  font-size: 0.75em;
}

.root :global {
  .Select-clear-zone,
  .Select-placeholder {
    display: none;
  }

  .Select-control {
    border: 0;
    border-radius: 0;
    box-shadow: none !important;
    height: auto;
  }

  .Select-control:hover {
    box-shadow: none;
  }

  .Select-input {
    height: 2.5em;
    padding: 0;
  }

  .Select-input > input {
    box-sizing: content-box;
    height: 1em;
    line-height: 2.5em;
    padding: 0.75em 0;
  }

  .Select-control .Select-value {
    height: 2.5em;
    line-height: 2.5em;
    padding-left: 0;
  }

  .Select-arrow {
    border-color: #323232 transparent transparent;
    border-width: 6px 6px 3px;
    top: 3px;

    &::after {
      content: '';
      border: solid;
      border-color: white transparent transparent;
      border-width: 6px 6px 3px;
      height: 0;
      left: -6px;
      position: absolute;
      top: -8px;
      width: 0;
    }
  }

  .Select-menu-outer {
    border: 0;
    border-radius: 4px;
    box-shadow: 0 0 3px rgba(0, 0, 0, 0.1), 0 2px 5px rgba(0, 0, 0, 0.2);
    left: -2.625em;
    margin-top: 0;
    right: -2.625em;
    width: auto;
  }

  .Select-option {
    background: transparent;
    color: #323232;
    padding-left: 0;
  }

  .Select-option.is-focused,
  .Select-option.is-selected {
    background: transparent;
    color: #323232;
  }

  .Select-option.is-focused {
    color: #0324FF;
  }
}

.root:global(.is-open) :global .Select-arrow {
  border-color: transparent transparent #323232;
  border-width: 0 6px 6px;
  top: 0;

  &::after {
    border: solid;
    border-color: transparent transparent white;
    border-width: 0 6px 6px;
    left: -6px;
    top: 2px;
  }
}

@media (--md-up) {
  .root {
    font-size: 1em;
  }
}
