.root {
  background-color: #FDFDFD;
  border: 1px solid #EBEBEB;
  border-radius: 4px;

  &:focus-within {
    border: 1px solid #0324FF !important;
  }
}

.withError {
  border: 1px solid #FF5C00;
}

.input {
  width: 100%;
  height: 376px;
  padding: 1.5em 1.5em 0;
  border: none;
  outline: none;
  color: #323232;
  background-color: #FDFDFD;
  resize: none;
  font-size: 16px;
  letter-spacing: 0;
  line-height: 24px;
  border-radius: 4px;
}

.input::placeholder {
  color: #CDCDCD;
}

.footer {
  display: grid;
  grid-template-columns: auto 200px;
  padding: 1.5em;
  border-top: #EBEBEB 1px solid;
  color: #A3A3A3;
  font-family: var(--sans);
  font-size: 12px;
  letter-spacing: 0;
  line-height: 24px;
  user-select: none;

  span {
    display: inline-block;
    margin-right: 8px;
  }
}

.wordCount {
  text-align: right;
}

.bold {
  font-weight: var(--bold);
}

.italic {
  font-style: italic;
}

.code {
  background-color: #F2F1F1;
}
