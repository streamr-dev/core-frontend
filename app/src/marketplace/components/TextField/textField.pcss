.input {
  width: 100%;
  background: white;
  border-radius: 4px;
  border: 1px solid #EFEFEF;
  padding: 0 1rem;
  outline: none;
  box-shadow: none;
  font-size: 1rem;
  letter-spacing: 0;
  line-height: 2.5rem;
  color: #323232;

  &:focus {
    outline: none;
    box-shadow: none;
    border: 1px solid #0324FF;
  }

  &::placeholder {
    color: #CDCDCD;
  }
}

.withError {
  border: 1px solid #FF5C00;
}

.errorMessage {
  color: #FF5C00;
}
