@import 'variables.pcss';

.productTile {
  display: block;
  margin: 1em auto 0;
  border-radius: 2px;
  font-family: 'IBM Plex Sans', sans-serif;
  font-size: 16px;
  text-align: left;

  .row {
    margin-top: 0.3em;
  }

  &,
  &:--idle,
  &:--enter {
    a {
      color: black;
      text-decoration: none;
    }
  }

  .dropdown > a {
    display: none;
  }

  &:--enter .dropdown > a {
    display: block;
  }

  .invisible {
    display: none;
  }

  .containImg {
    position: relative;
    padding-top: 66.6667%;
  }

  .productImage {
    height: 100%;
    width: 100%;
    position: absolute !important;
    top: 0;
    background-size: cover;
    background-position: 50% 50%;
    background-repeat: no-repeat;
    border-radius: 2px;
    margin-bottom: 10px;
    transition: 50ms ease-in-out transform;
  }

  &:--enter {
    .productImage {
      filter: brightness(70%);
    }
  }

  &.loading {
    .row:last-child {
      width: 50%;
    }
  }

  .defaultImagePlaceholder {
    position: relative;
    background-image: linear-gradient(135deg, #0045FF 0%, #7200EE 100%);

    svg {
      position: absolute;
      width: 60px;
      height: 60px;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
    }
  }
}

.name,
.price {
  color: var(--greyDark);
}

.owner,
.price,
.subscriptionStatus,
.publishStatus {
  font-size: 0.75em;
  font-weight: var(--medium);
  line-height: 1em;
}

.name {
  font-size: 1em;
  line-height: 1.2em;
  font-weight: var(--semiBold);
  margin-top: 0.5em;
}

.owner {
  color: var(--greyLight5);
}

.publishStatusContainer {
  line-height: 1.5em;
}

.publishStatus {
  display: inline;
  font-weight: var(--light);
  padding: 2px 4px;
  color: var(--white);
  background-color: var(--purple2);
  border-radius: 2px;
}
