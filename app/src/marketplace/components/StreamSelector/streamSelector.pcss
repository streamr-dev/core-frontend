.root {
  background: var(--white);
  border-radius: 4px;
  border: 1px solid #EFEFEF;

  > * {
    padding: 15px 25px;
  }

  &:focus-within {
    border: 1px solid #0324FF !important;
  }
}

.withError {
  border: 1px solid #FF5C00;
}

.disabled {
  opacity: 0.5;
}

.inputWrapper {
  width: auto;
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.input {
  border: none;
  background: none;

  &:focus,
  &:disabled {
    background: none;
    outline: none;
    box-shadow: none;
  }

  &::placeholder {
    color: #CDCDCD;
  }
}

.clearButton {
  appearance: none;
  background: none;
  border: none;
  width: 12px;
  height: 12px;
  padding: 0;
  margin: 0 12px 0 8px;
  box-sizing: content-box;
  line-height: 0;
  flex-shrink: 0;
}

.clearButton path {
  transition: all 0.1s;
  fill: #A3A3A3;
  stroke: #A3A3A3;
}

.clearButton:hover path {
  fill: var(--greyDark2);
  stroke: var(--greyDark2);
}

.clearButton:focus {
  outline: none;
}

.inputContainer {
  display: flex;
  align-items: center;
  border-bottom: 1px solid #EFEFEF;
}

.selectedCount {
  font-size: 14px;
  color: var(--greyDark);
}

.sortDropdown {
  a,
  a:visited,
  a:hover {
    text-decoration: none;
    color: #A9A9A9;
  }
}

.sortDropdownTitle {
  line-height: normal;
}

.streams {
  background: white;
  height: 315px;
  overflow: auto;
  position: relative;
}

.darkBgStreams {
  background: #EFEFEF;
}

.loadingIndicator {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 2px;
  opacity: 0.5 !important;
}

.stream {
  display: inline-block;
  border-radius: 6px;
  font-size: 14px;
  margin-bottom: 8px;
  border: none;
  color: #323232;
  background: var(--greyLight3);
  cursor: pointer;

  &:first-child,
  & + .stream {
    margin-left: 0;
    margin-right: 8px;
  }

  &:last-child {
    margin-right: 0;
  }
}

.selected {
  color: var(--greyLight3);
  background-color: #2BC438;
  transition: all 0.1s;
}

.addButton {
  border: none;
  color: inherit;
  padding: 2px 10px;
  margin: 0;
  background: none;
  cursor: inherit;
  font-family: var(--sans);
  font-size: 14px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  max-width: 200px;

  &:focus {
    outline: none;
  }
}

.footer {
  display: grid;
  align-items: center;
  grid-template-columns: 1fr auto;
  grid-column-gap: 10px;
  border-top: 1px solid #EFEFEF;

  .editButton {
    grid-column: -1;
  }
}

.actions {
  margin-left: auto;
}

.noAvailableStreams {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  color: #323232;
}

.loadMoreResults {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 8px;
}

.SearchIcon {
  width: 16px;
  height: 16px;
  color: #A3A3A3;
}

@media (--md-up) {
  .addButton {
    max-width: 500px;
  }
}
