.root {}

.GuidedDeployDataUnionDialog {}

.content {
  padding: 0;
  border-bottom: 0;
}

.dialogContainer {
  min-height: 500px;
}

.footer {
  padding: 1.5rem;
  display: flex;
  align-items: center;
}

.footerText {
  flex: 1;
  text-align: left;
}

.formGroup {
  padding: 0;
}

.label {
  font-size: 0.9em;

  & > input {
    top: 3px;
  }
}

.previewImageWrapper {
  width: 100%;
  height: 240px;
  overflow: hidden;
  position: relative;
  border-bottom: 1px solid #F2F1F1;
}

.previewImage {
  width: 100%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.previewContainer {
  width: 100%;
  height: 240px;
  border-bottom: 1px solid #F2F1F1;
  background-color: #FCFBF9;
  overflow: hidden;
  position: relative;
}

.previewBackground {
  position: absolute;
  width: 100%;
  height: 100%;
  background: url('../../../assets/deploy-modal-overlay.png') no-repeat 50% 50%;
  background-size: cover;
}

.textContainer {
  width: 100%;
  padding: 2rem 1rem;
  font-size: 1rem;
  letter-spacing: 0;
  line-height: 1.5rem;
  text-align: center;
}

.tabContent {
  width: 100%;
}

.tabs {
  width: 100%;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  grid-column-gap: 1rem;
}

.tab {
  height: 1px;
  position: relative;
}

.tabLine {
  background-color: #D8D8D8;
  transition: background-color 0.3s linear;
  height: 1px;
}

.activeTab {
  background-color: #0324FF;
}

.tabButton {
  display: block;
  position: absolute;
  height: 11px;
  width: 100%;
  top: -5px;
  background: transparent;
  border: none !important;
  font-size: 0;
  outline: none;
  cursor: pointer;
  padding: 0;
  margin: 0;

  &:focus {
    outline: none;
  }

  &:hover {
    .tabLine:not(.activeTab) {
      background-color: rgba(0, 0, 0, 0.4);
    }
  }
}

.productCard {
  background-color: white;
  box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.15);
  padding: 1rem;
  width: 400px;
  border: 1px solid #F5F5F5;
  position: absolute;
  border-radius: 4px;
}

.highlightStatus {
  bottom: 50%;
  left: 50%;
  transform: translate(-30px, 50px);
}

.highlightMembers {
  top: 50%;
  right: 50%;
  transform: translate(45px, calc(-50% - 50px));
}

.highlightStats {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-100px, calc(-50% - 5px));
}

.productTile {
  width: 100%;
}

.status {
  color: #FF5C00;
}
