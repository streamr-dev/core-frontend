.publishProgress {
  width: 100%;
  margin-top: 1rem;
  margin-bottom: 3rem;
}

.titlePending {
  opacity: 0.5;
}

.pendingTasks {
  color: #A3A3A3;
  font-size: 1um;
  line-height: 1.5um;
  width: 100%;
  min-height: 1.5um;
  margin-bottom: 0.5um;
  text-align: left;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;

  &:not(:empty)::after {
    content: '...';
  }
}
