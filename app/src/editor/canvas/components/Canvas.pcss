.Canvas {
  background: #EFEFEF;
  position: relative;
}

.CanvasElements {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  overflow: auto;
}

.Modules,
.Cables {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin-bottom: 20px;
  margin-right: 20px;
}

.Modules:focus {
  outline: none;
}

.Cables {
  z-index: 0;
  fill: none;
  pointer-events: none;
}

svg.Cables {
  overflow: visible;
}

.Connection {
  stroke: #525252;
  fill: none;
  stroke-width: 1;
}
