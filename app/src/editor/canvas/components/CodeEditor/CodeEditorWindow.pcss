.editorDialog {
  position: absolute;
  z-index: 1;

  :global(.react-resizable-handle) {
    width: 24px;
    height: 24px;
    right: 0;
    bottom: 0;
    position: absolute;
    cursor: nwse-resize;
  }
}

.editorContainer {
  padding: 24px;
  position: relative;
  overflow: auto;
  flex: 1;
}

.customAceTooltip {
  padding: 6px 8px;
  background: #323232;
  border-radius: 2px;
  color: #EFEFEF;
  box-shadow: none;
  border: none;
  font-family: var(--sans);
  font-size: 12px;
  letter-spacing: 0;
  line-height: 14px;
}

.editor {
  color: #2AC437;
  font-family: var(--mono);
  font-size: 12px;
  letter-spacing: 1px;
  line-height: 16px;

  & :global(.ace_gutter) {
    background: none !important;
    color: #ADADAD !important;
  }
}
