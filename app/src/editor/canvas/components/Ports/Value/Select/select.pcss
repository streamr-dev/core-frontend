.root {
  min-height: var(--um);
  display: flex;
}

.inner {
  position: relative;
  display: flex;
  border-radius: calc(0.125 * var(--um));
}

.inner:hover,
.inner:focus-within {
  background-color: #F5F5F5;
}

.root select {
  appearance: none;
  background-color: transparent;
  border: 0;
  border-radius: calc(0.125 * var(--um));
  color: #ADADAD;
  font-weight: var(--medium);
  line-height: var(--um);
  outline: 0;
  padding: 0 calc(0.5 * var(--um));
  transition: 200ms linear;
  transition-property: background-color, color, box-shadow;
}

.root select:focus {
  box-shadow: inset 0 0 0 1px #6AEDFF;
  color: #323232;
}

.control {
  position: absolute;
  width: 100%;
}

.spaceholder {
  visibility: hidden;
}
