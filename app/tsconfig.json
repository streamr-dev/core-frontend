{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "typeRoots": ["./typings"],
        "paths": {
            "$app/*": ["*"],
            "$mp/*": ["src/marketplace/*"],
            "$userpages/*": ["src/userpages/*"],
            "$routes/*": ["src/routes/*"],
            "$routes": ["src/routes/index.ts"],
            "$shared/*": ["src/shared/*"],
            "$testUtils/*": ["src/test/test-utils/*"],
            "$ui/*": ["src/shared/components/Ui/*"],
            "$utils/*": ["src/utils/*"],
            "$config": ["src/config/*.toml"]
        }
    },
    "exclude": ["**/*.test.ts", "**/*.test.tsx", "./test/test-utils/setupTests.ts"]
}
