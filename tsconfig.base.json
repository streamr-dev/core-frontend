{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": false,
        "module": "ES2020",
        "target": "ES2020",
        "jsx": "react",
        "strict": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "lib": ["dom", "esnext"],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "noEmit": true,
        "baseUrl": "./",
        "plugins": [{ "name": "typescript-plugin-css-modules" }]
    }
}
