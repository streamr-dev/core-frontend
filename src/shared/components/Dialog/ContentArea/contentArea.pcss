.modalContentArea {
  padding: 24px;
  font-size: 16px;
  border-radius: inherit;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  word-break: break-word;

  @media (--md-up) {
    padding: 24px 48px;
  }
}

@media (--xs) {
  .modalContentArea {
    padding: 40px 1.5um;
    font-size: 14px;
    line-height: 24px;
  }
}
