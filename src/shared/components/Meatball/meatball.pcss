.root {
  border: 1px solid transparent;
  border-radius: 2px;
  opacity: 0.5;
  padding: 5px;
  transition: 200ms ease-in-out;
  transition-property: border-color, opacity, box-shadow;
}

.root svg {
  display: block;
}

.root circle {
  fill: var(--greyDark);
}

.disabled {
  cursor: not-allowed;
}

.root:not(.disabled):--enter,
a:--enter .root:not(.disabled) {
  opacity: 1;
  transition-duration: 50ms;
}

.white {
  border-color: rgba(255, 255, 255, 0.5);
  box-shadow: inset 0 0 0 0.5px rgba(255, 255, 255, 0.5);
  opacity: 1;
}

.white circle {
  fill: var(--white);
}

.white:--enter,
:global(.dropdown.show) .white {
  border-color: var(--white);
  box-shadow: inset 0 0 0 0.5px #FFFFFF;
}

.blue {
  border-color: rgba(3, 36, 255, 0.5);
  opacity: 1;
}

.blue circle {
  fill: var(--streamrBlue);
}

.blue:not(.disabled):--enter,
a:--enter .blue:not(.disabled) {
  border-color: var(--streamrBlue);
}

.gray {
  border: none;
  background-color: #EFEFEF;
  opacity: 1;
  height: 1.5rem;
  width: 2rem;
  display: flex;
  align-items: center;
  justify-content: center;
}

.gray circle {
  fill: var(--grey2);
}

.gray:not(.disabled):--enter,
a:--enter .gray:not(.disabled) {
  background-color: #F8F8F8;
}

.gray2 {
  border-color: rgba(50, 50, 50, 0.5);
  opacity: 1;
}

.gray2 circle {
  fill: var(--greyDark);
}

.gray2:not(.disabled):--enter,
a:--enter .gray2:not(.disabled) {
  border-color: var(--greyDark);
}
